<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BookAppointmentActivity">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="24*7 HealthCare"
        android:textColor="@color/purple_200"
        android:textSize="30sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtBookAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Book Appointment"
        android:textColor="@color/colorWhite"

        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAppFullName"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:layout_below="@+id/txtBookAppTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <EditText
        android:id="@+id/editTextAppAddress"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:layout_below="@+id/editTextAppFullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <EditText
        android:id="@+id/editTextAppContactNumber"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:layout_below="@+id/editTextAppAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <EditText
        android:id="@+id/editTextAppFees"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:layout_below="@+id/editTextAppContactNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Fees"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <RelativeLayout
        android:id="@+id/selectWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAppFees"
        android:layout_marginTop="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <TextView
            android:id="@+id/selectTextAppDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textColor="@color/yellowLight"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/SelectTextAppTime"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="Select Time"
            android:textColor="@color/yellowLight"
            android:textSize="15dp" />

        <TextView
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectTextAppDate"
            android:id="@+id/selectBtnDate"
            android:layout_marginStart="6dp"
            android:text="27/10/2022"
            android:textColor="@color/white" />

        <TextView
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SelectTextAppTime"
            android:layout_alignParentEnd="true"
            android:text="10:10"
            android:id="@+id/selectBtnTime"
            android:textColor="@color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonBookAppointment"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_below="@+id/selectWrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:text="Book Appointment" />


    <Button
        android:id="@+id/buttonBABack"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_below="@+id/buttonBookAppointment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:text="Back" />


</RelativeLayout>